<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SettingCategory">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/_10sdp</item>
        <item name="android:layout_marginEnd">@dimen/_12sdp</item>
        <item name="android:layout_marginStart">@dimen/_12sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/comic_bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/_15ssp</item>
    </style>

    <style name="SettingTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/comic_regular</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    <style name="EditProfileTextViewHeading">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/comic_regular</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
    </style>

    <style name="EditProfileEditTextStyle">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/comic_regular</item>
        <item name="android:textColorHint">@color/colorSecondaryText</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
    </style>

</resources>
