<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="comic"
            type="com.codebosses.comical.pojo.Comic" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        app:cardElevation="3dp"
        app:cardCornerRadius="0dp"
        android:background="?attr/selectableItemBackground">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageViewComicHomeRow"
                android:layout_width="@dimen/_140sdp"
                android:layout_height="@dimen/_200sdp"
                android:image="@{comic.comicPosterPath}"
                android:padding="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/comic_placeholder"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewNameComicHomeRow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_alpha_gradient"
                android:fontFamily="@font/comic_bold"
                android:lines="2"
                android:maxLines="2"
                android:paddingStart="@dimen/_5sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="@{comic.comicName}"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewComicHomeRow"
                app:layout_constraintEnd_toEndOf="@+id/imageViewComicHomeRow"
                app:layout_constraintStart_toStartOf="@+id/imageViewComicHomeRow" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>