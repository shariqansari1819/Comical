<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewComicDetailRow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_200sdp"
        android:padding="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/comic_placeholder" />

    <TextView
        android:id="@+id/textViewNameComicDetailRow"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewComicDetailRow"
        app:layout_constraintEnd_toEndOf="@+id/imageViewComicDetailRow"
        app:layout_constraintStart_toStartOf="@+id/imageViewComicDetailRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_transparent_black"
        android:fontFamily="@font/comic_bold"
        android:lines="2"
        android:maxLines="2"
        android:paddingStart="@dimen/_5sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingEnd="@dimen/_5sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_14ssp" />

</androidx.constraintlayout.widget.ConstraintLayout>